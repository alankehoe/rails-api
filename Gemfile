source 'https://rubygems.org'

# rails
gem 'rails'

# Supported DBs
gem 'pg', group: :postgres

# Seeds
gem 'faker'
gem 'seed-fu', '~> 2.3'
gem 'factory_girl_rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'simplecov'
  gem 'shoulda-matchers'
end

group :doc do
  gem 'sdoc', require: false
end

# Linter
gem 'rubocop', require: false

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# App server
gem 'puma'

# Currency
gem 'chronic'
gem 'money'
gem 'money-rails'
gem 'eu_central_bank'

# Active Record Helpers
gem 'by_star'

# Background tasks
gem 'sidekiq'
gem 'sidetiq'
gem 'sinatra', '>= 1.3.0', require: false

# Redis
gem 'redis-sentinel'

# OAuth
gem 'doorkeeper'

# Authentication
gem 'devise'

# JSON API
gem 'rabl'

# Uploads
gem 'fog'
gem 'carrierwave'
gem 'mini_magick'

# Geocoder for location based services
gem 'geocoder'

# Logentries
gem 'le'

# Application config
gem 'settingslogic'

# Admin panel
gem 'activeadmin', github: 'activeadmin'

# Templating
gem 'haml'
